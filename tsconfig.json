{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "outDir": "./app",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
